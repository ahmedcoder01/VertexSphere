{
  "compilerOptions": {
    "target": "es6", // Specify the ECMAScript target version
    "module": "ESNext", // Specify the module system
    "outDir": "./dist", // Specify the output directory for compiled files
    // "esModuleInterop": true // Enable interoperability between CommonJS and ES Modules
    "moduleResolution": "node",
  },
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    },
  "include": [
    "./" // Specify the directory to include for compilation
  ],
  "exclude": [
    "node_modules" // Specify the directories to exclude from compilation
  ]
}
